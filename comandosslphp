 openssl req -x509 -days 365 -newkey rsa:2048 -keyout localhost.key -out localhost.crt
 vi /etc/apache2/sites-available/https.conf
 cd /etc/apache2/sites-available
 ls -l
 chmod 755 https.conf 
 ls -l
 a2ensite https.conf 
 service apache2 reload
 service apache2 status
 service apache2 start
 service apache2 status
 a2enmod ssl
 service apache2 restart
 service apache2 status
 vi https.conf 
 a2ensite https.conf 
 a2ensite https.conf
 vi https.conf 
 a2ensite https.conf 
 a2enmod ssl
 service apache2 reload
 service apache2 restart
 service apache2 status
 cp https.conf /root/seguranca/
 history > comandosslphp && mv comandosslphp /root/seguranca/
